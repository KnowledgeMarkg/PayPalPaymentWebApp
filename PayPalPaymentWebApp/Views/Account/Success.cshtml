@model PayPalPaymentWebApp.Models.PaymentSuccessViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-success mb-4">
                        <i class="bi bi-check-circle"></i> Payment Successful
                    </h2>
                    <p class="lead">Your payment was successfully processed.</p>

                    @if (Model.TicketTokens != null && Model.TicketTokens.Any())
                    {
                        <div class="alert alert-info mt-4">
                            <p class="mb-2">Your Tickets Number:</p>
                            <ul class="list-group">
                                @foreach (var token in Model.TicketTokens)
                                {
                                    <li class="list-group-item"><strong>@token</strong></li>
                                }
                            </ul>
                        </div>
                        <div class="mt-4">
                            <a href="@Url.Action("DownloadTickets", "Account", new { userId = Model.UserId })" class="btn btn-primary btn-lg">
                                <i class="bi bi-download"></i> Download Tickets
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mt-4">
                            <p>No tokens were generated.</p>
                        </div>
                    }

                    <a href="@Url.Action("Index", "Home")" class="btn btn-success btn-lg mt-4">
                        <i class="bi bi-house-door"></i> Go to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Add Bootstrap and Bootstrap Icons -->
